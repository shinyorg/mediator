        <ProjectReference Include="..\..\src\Shiny.Mediator\Shiny.Mediator.csproj"/>
        <ProjectReference Include="..\..\src\Shiny.Mediator.AppSupport\Shiny.Mediator.AppSupport.csproj"/>

        <ProjectReference Include="..\..\src\Shiny.Mediator.Contracts.SourceGenerators\Shiny.Mediator.Contracts.SourceGenerators.csproj"
                          OutputItemType="Analyzer"/>

        <ProjectReference Include="..\..\src\Shiny.Mediator.SourceGenerators\Shiny.Mediator.SourceGenerators.csproj"
                          OutputItemType="Analyzer"/>

        <ProjectReference Include="..\..\src\Shiny.Mediator.AspNet.SourceGenerators\Shiny.Mediator.AspNet.SourceGenerators.csproj"
                          OutputItemType="Analyzer"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Http\*.json"/>
        <Content Include="Http\*.json" CopyToOutputDirectory="Always"/>
        <None Remove="testapi.json"/>
        <None Update="SourceGeneration\MediatorSourceGeneratorTests.Driver_Success#__MediatorHandlersRegistration.g.received.cs">
            <ParentExtension>.cs</ParentExtension>
            <ParentFile>MediatorSourceGeneratorTests</ParentFile>
            <DependentUpon>MediatorSourceGeneratorTests.cs</DependentUpon>
        </None>
        <None Remove="SourceGeneration\serialization.json"/>
        <Content Include="SourceGeneration\serialization.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    
